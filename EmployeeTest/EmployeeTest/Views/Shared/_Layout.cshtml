<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Employee Calculated Salary", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
            </div>            
        </div>
    </div>

    <h2 class="container h2"> 
        Calculated Salary Employee
    </h2>
    <div class="row">        
        <div class="container body-content active">
            @using (Ajax.BeginForm("SearchEmployee", "Employee", new AjaxOptions { }))
            {
                <div class="col-lg-2">
                    <input type="number" class="form-control" id="searchIdEmployee" placeholder="id Employee" value="" name="idEmployee">
                </div>
                <div class="col-lg-2">
                    <button id="btnsearchIdEmployee" type="submit" class="btn btn-primary mb-2 login_btn">Get Employee</button>
                </div>
            }

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
